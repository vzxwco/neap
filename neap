import ConfigParser
from datetime import datetime
from optparse import OptionParser

import gtk
import gobject
from Xlib import X, display, error, Xatom, Xutil
import Xlib.protocol.event

__appname__ = 'neap'
__author__ = ['Philip Busch <vzxwco@gmail.com>', 'Cl√©ment Lavoillotte', 'Samuel Bauer <samuel.bauer@yahoo.fr>']
__version__ = '0.7.1'
